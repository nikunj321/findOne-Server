// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Company {
  id    String @unique @default(cuid())
  name  String
  email String @unique
}

model Job {
  id          Int    @id @default(autoincrement())
  title       String
  description String
  role        String
}
